# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your actual values

# Required: Your Gemini API key
gemini_api_key = "your_gemini_api_key_here"

# Required: GitHub personal access token for GHCR
github_token = "ghp_your_github_token_here"

# Required: Your GitHub username
github_username = "your_github_username"

# Docker image to deploy (update after pushing to GHCR)
docker_image = "ghcr.io/your_username/your_repo:latest"

# Optional: Customize these if needed
# resource_group_name = "optibot-rg"
# location = "Southeast Asia"
# vm_size = "Standard_B2s"
# admin_username = "azureuser"
